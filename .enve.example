# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=5000
APP_NAME=SmartFarm Management System
APP_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/smartfarm
MONGODB_TEST_URI=mongodb://localhost:27017/smartfarm_test

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Cloudinary (Image Storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# Weather API
WEATHER_API_KEY=your-openweathermap-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Twilio (SMS Notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@smartfarm.com

# Stripe (Payment Processing)
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# AWS S3 (Optional file storage backup)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=smartfarm-uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Development/Testing
SEED_DATABASE=false
ENABLE_SWAGGER=true
ENABLE_MORGAN=true

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# External APIs
MARKET_DATA_API_KEY=your-market-data-api-key
SOIL_DATA_API_KEY=your-soil-data-api-key

# Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_REAL_TIME_UPDATES=true
